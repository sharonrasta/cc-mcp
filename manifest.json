{
  "manifest_version": 3,
  "name": "MCP Console Reporter",
  "version": "1.0",
  "description": "Captures console logs and sends them to a local MCP server.",
  "permissions": ["scripting", "activeTab", "tabs", "debugger"],
  "host_permissions": [
    "http://localhost:3201/*",
    "http://127.0.0.1:3201/*"
    
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}